{
  "manifest_version": 3,
  "name": "Notes Plus",
  "version": "1.0",
  "description": "An enhanced note-taking extension with animations and colors",
  "permissions": ["contextMenus", "storage", "cookies", "activeTab", "notifications"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.ico",
      "48": "icons/icon48.ico",
      "128": "icons/icon128.ico"
    }
  },
  "background": {
    "service_worker": "background.js"
  }
}